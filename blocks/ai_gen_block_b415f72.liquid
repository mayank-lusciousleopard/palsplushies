{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-section-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
  }

  .ai-image-text-container-{{ ai_gen_id }} {
    display: flex;
    gap: 40px;
    align-items: flex-start;
  }

  .ai-image-column-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-text-column-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-main-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    font-weight: 600;
  }

  .ai-sections-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-text-section-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.section_gap }}px;
  }

  .ai-section-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-secondary-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.secondary_text_size }}px;
    color: {{ block.settings.secondary_text_color }};
    margin: 0;
    line-height: 1.4;
  }

  .ai-icon-box-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: {{ block.settings.icon_text_gap }}px;
    padding: {{ block.settings.icon_box_padding }}px;
    background-color: {{ block.settings.icon_box_bg }};
    border-radius: {{ block.settings.icon_box_radius }}px;
    border: {{ block.settings.icon_box_border_width }}px solid {{ block.settings.icon_box_border_color }};
  }

  .ai-icon-box-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
  }

  .ai-icon-box-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.icon_text_size }}px;
    color: {{ block.settings.icon_text_color }};
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-image-text-container-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 24px;
    }

    .ai-sections-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<image-text-section-{{ ai_gen_id }}
  class="ai-image-text-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-image-text-container-{{ ai_gen_id }}">
    <div class="ai-image-column-{{ ai_gen_id }}">
      <div class="ai-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 1000 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
          >
        {% else %}
          <div class="ai-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-text-column-{{ ai_gen_id }}">
      {% if block.settings.main_heading != blank %}
        <h2 class="ai-main-heading-{{ ai_gen_id }}">{{ block.settings.main_heading }}</h2>
      {% endif %}

      <div class="ai-sections-grid-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% liquid
            assign text_key = 'section_' | append: i | append: '_text'
            assign secondary_key = 'section_' | append: i | append: '_secondary'
            assign icon_text_key = 'section_' | append: i | append: '_icon_text'
            assign icon_color_key = 'section_' | append: i | append: '_icon_color'

            assign section_text = block.settings[text_key]
            assign secondary_text = block.settings[secondary_key]
            assign icon_text = block.settings[icon_text_key]
            assign icon_color = block.settings[icon_color_key]
          %}

          <div class="ai-text-section-{{ ai_gen_id }}">
            {% if section_text != blank %}
              <p class="ai-section-text-{{ ai_gen_id }}">{{ section_text }}</p>
            {% endif %}

            {% if secondary_text != blank %}
              <p class="ai-secondary-text-{{ ai_gen_id }}">{{ secondary_text }}</p>
            {% endif %}

            {% if icon_text != blank %}
              <div class="ai-icon-box-{{ ai_gen_id }}">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="{{ icon_color }}"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                <span class="ai-icon-box-text-{{ ai_gen_id }}">{{ icon_text }}</span>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</image-text-section-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageTextSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('image-text-section-{{ ai_gen_id }}', ImageTextSection{{ ai_gen_id }});
  })();
</script>

